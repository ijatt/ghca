generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  APPLICANT
  ADMIN
}

model users {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  role      Role       @default(APPLICANT)
  admin     admin?
  applicant applicant?
}

model admin {
  id         Int    @id @default(autoincrement())
  name       String
  department String
  userId     Int    @unique
  user       users  @relation(fields: [userId], references: [id])
}

model applicant {
  id             Int    @id @default(autoincrement())
  name           String
  icNumber       String?
  contactNumber  String?
  address        String?
  city           String?
  postcode       String?
  universityName String?
  userId         Int    @unique
  user           users  @relation(fields: [userId], references: [id])
}
